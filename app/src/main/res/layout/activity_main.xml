<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hotboys69.dat153.whosetweetisthatappthing.view.MainActivity"
    android:layout_gravity="center"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="355dp"
            android:layout_height="133dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/whosetweet2" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/twitterOfficial"
            android:text="@string/play"
            android:textColor="@color/twitterOfficialWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view" />

        <Button
            android:id="@+id/tweeter_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/play_button"
            android:layout_below="@id/play_button"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/twitterOfficial"
            android:text="@string/tweeters"
            android:textColor="@color/twitterOfficialWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/play_button" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweeter_button"
            android:layout_alignStart="@id/tweeter_button"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/twitterOfficial"
            android:text="@string/settings"
            android:textColor="@color/twitterOfficialWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tweeter_button" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
